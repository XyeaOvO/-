.container {
  padding: 30rpx;
  padding-top: 60px;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.back-icon{
  width: 40rpx;
  height: 40rpx;
}

.product-image {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.image-counter {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.info {
  padding: 10px 11px 0px 10px;
}

.product-name {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 8px;
}

.price-container {
  margin-top: 6px;
  margin-bottom: 8px;
}

.currency {
  font-size: 16px;
  margin-left: 2px;
}

.description {
  font-size: 14px;
  color: #666;
}

.favorite-icon {
  position: absolute;
  top: 305px;
  right: 30px;
  font-size: 35px;
  color: #999;
} 

.option-title {
  font-size: 32rpx;
  font-weight: bold;
  padding-bottom: 10px;
}

.size-options {
  display: flex;
  justify-content: space-between;
}

.size-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  width: 45%;
}

.size-option.selected {
  border: 2rpx solid #007aff;
}


textarea {
  width: 94%;
  height: 100rpx;
  background-color: #fff;
  padding: 20rpx;
}

.char-count {
  text-align: right;
  color: #999;
  font-size: 24rpx;
}

.quantity-control {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}

.quantity-btn {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
}

.quantity {
  font-size: 32rpx;
  margin: 0 40rpx;
}

.add-to-cart-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 0;
  margin-top: 40rpx;
  text-align: center;
  font-size: 32rpx;
}